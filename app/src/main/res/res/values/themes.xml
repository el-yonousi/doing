<resources xmlns:tools = "http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name = "Theme.Doing" parent = "Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name = "colorPrimary">@color/dark_dark</item>
        <item name = "colorPrimaryVariant">@color/dark_dark</item>
        <item name = "colorOnPrimary">@color/dark_dark</item>
        <!-- Secondary brand color. -->
        <item name = "colorSecondary">@color/dark_dark</item>
        <item name = "colorSecondaryVariant">@color/dark_dark</item>
        <item name = "colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name = "android:statusBarColor" tools:targetApi = "l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name = "android:navigationBarColor" tools:targetApi = "lollipop">@color/dark_dark</item>
    </style>

    <style name = "text_style">
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">16sp</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:paddingBottom">5dp</item>
        <item name = "android:paddingStart">5dp</item>
        <item name = "android:paddingEnd">5dp</item>
    </style>

    <style name = "edit_style">
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textColorHint">@color/white</item>
        <item name = "android:layout_weight">1</item>
        <item name = "fontFamily">@font/cairo_reg</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "background">@color/white</item>
        <item name = "backgroundTint">@color/white</item>
        <item name = "boxStrokeColor">@color/white</item>
    </style>

    <style name = "text_style_home">
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textColorHint">@color/white</item>
        <item name = "android:textSize">16sp</item>
        <item name = "android:paddingTop">5dp</item>
        <item name = "android:paddingBottom">5dp</item>
        <item name = "android:layout_weight">1</item>
        <item name = "fontFamily">@font/cairo_reg</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>
</resources>